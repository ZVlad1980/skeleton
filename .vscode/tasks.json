{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "./_run_sqlplus.sh",
            "windows": {
                "command": "_run_sqlplus.bat"
            },
            "osx": {
                "command": "./_run_sqlplus.sh"
            },
            "args": [
                "node/node@node",
                "@\"${file}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "plsql",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": [
                    {
                        "regexp": "(.*) (\\d*)/(\\d*) (.*?) (.*)",
                        "severity": 1,
                        "line": 2,
                        "column": 3,
                        "file": 4,
                        "message": 5,
                        "loop": true
                    }
                ]
            }
        }
    ]
}